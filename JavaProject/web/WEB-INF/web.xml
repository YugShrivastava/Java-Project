<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddFaculty</servlet-name>
        <servlet-class>controller.AddFaculty</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudent</servlet-name>
        <servlet-class>controller.AddStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateFaculty</servlet-name>
        <servlet-class>controller.UpdateFaculty</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>controller.UpdateStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacultyDeletion</servlet-name>
        <servlet-class>controller.FacultyDeletion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddHOD</servlet-name>
        <servlet-class>controller.AddHOD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateHod</servlet-name>
        <servlet-class>controller.UpdateHod</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginChecker</servlet-name>
        <servlet-class>controller.LoginChecker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFaculty</servlet-name>
        <url-pattern>/AddFaculty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudent</servlet-name>
        <url-pattern>/AddStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateFaculty</servlet-name>
        <url-pattern>/UpdateFaculty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/UpdateStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyDeletion</servlet-name>
        <url-pattern>/FacultyDeletion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddHOD</servlet-name>
        <url-pattern>/AddHOD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateHod</servlet-name>
        <url-pattern>/UpdateHod</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginChecker</servlet-name>
        <url-pattern>/LoginChecker</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
